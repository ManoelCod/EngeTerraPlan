<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:EngeTerraPlan.ViewModels"
             x:Class="EngeTerraPlan.Views.DensidadeInSituView"
             Title="Densidade IN-SITU">

    <!-- Configurar o BindingContext -->
    <ContentPage.BindingContext>
        <vm:DensidadeInSituViewModel />
    </ContentPage.BindingContext>

    <ContentPage.Content>
        <ScrollView>
            <VerticalStackLayout Padding="20" Spacing="20">
                <!-- Formulário 1 -->
                <ContentView IsVisible="{Binding MostrarFormulario1}">
                    <VerticalStackLayout Spacing="20">
                        <!-- Título do primeiro formulário -->
                        <Label Text="Cadastro Densidade IN-SITU"
                               FontSize="24"
                               TextColor="blue"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               Margin="0,0,0,20" />

                        <!-- Campo Data -->
                        <HorizontalStackLayout Spacing="10">
                            <Label Text="Data:"
                                   FontAttributes="Bold"
                                   VerticalOptions="Center"
                                   WidthRequest="120" />
                            <DatePicker Date="{Binding Data}" 
                                        Format="dd/MM/yyyy"
                                        HorizontalOptions="FillAndExpand" />
                        </HorizontalStackLayout>

                        <!-- Campo Estaca/Local -->
                        <HorizontalStackLayout Spacing="10">
                            <Label Text="Estaca/Local:"
                                   FontAttributes="Bold"
                                   VerticalOptions="Center"
                                   WidthRequest="120" />
                            <Entry Placeholder="Digite a estaca ou local"
                                   Text="{Binding Estaca}"
                                   HorizontalOptions="FillAndExpand" />
                        </HorizontalStackLayout>

                        <!-- Campo Camada -->
                        <HorizontalStackLayout Spacing="10">
                            <Label Text="Camada:"
                                   FontAttributes="Bold"
                                   VerticalOptions="Center"
                                   WidthRequest="120" />
                            <Entry Placeholder="Descrição da camada"
                                   Text="{Binding Camada}"
                                   HorizontalOptions="FillAndExpand" />
                        </HorizontalStackLayout>

                        <!-- Campo Profundidade do Furo -->
                        <HorizontalStackLayout Spacing="10">
                            <Label Text="Prof. Furo (cm):"
                                   FontAttributes="Bold"
                                   VerticalOptions="Center"
                                   WidthRequest="120" />
                            <Entry Placeholder="Digite a profundidade"
                                   Keyboard="Numeric"
                                   Text="{Binding ProfundidadeFuro}"
                                   HorizontalOptions="FillAndExpand" />
                        </HorizontalStackLayout>

                        <!-- Campo Espessura da Camada -->
                        <HorizontalStackLayout Spacing="10">
                            <Label Text="Esp. Camada (cm):"
                                   FontAttributes="Bold"
                                   VerticalOptions="Center"
                                   WidthRequest="120" />
                            <Entry Placeholder="Digite a espessura"
                                   Keyboard="Numeric"
                                   Text="{Binding EspessuraCamada}"
                                   HorizontalOptions="FillAndExpand" />
                        </HorizontalStackLayout>

                        <!-- Campo Posição com RadioButtons -->
                        <VerticalStackLayout Spacing="10" Margin="0,10,0,0">
                            <Label Text="Posição:"
                                   FontAttributes="Bold"
                                   VerticalOptions="Center"
                                   Margin="0,0,0,5" />
                            <HorizontalStackLayout Spacing="20" HorizontalOptions="Center">
                                <RadioButton Content="Esquerda"
                                             GroupName="Posicao"
                                             IsChecked="{Binding PosicaoEsquerda}" />
                                <RadioButton Content="Centro"
                                             GroupName="Posicao"
                                             IsChecked="{Binding PosicaoCentro}" />
                                <RadioButton Content="Direita"
                                             GroupName="Posicao"
                                             IsChecked="{Binding PosicaoDireita}" />
                            </HorizontalStackLayout>
                        </VerticalStackLayout>

                        <!-- Botão Avançar -->
                        <Button Text="Avançar"
                                BackgroundColor="Blue"
                                TextColor="White"
                                FontAttributes="Bold"
                                HeightRequest="50"
                                CornerRadius="10"
                                Command="{Binding AvancarCommand}"
                                HorizontalOptions="FillAndExpand"
                                Margin="0,20,0,0" />
                    </VerticalStackLayout>
                </ContentView>

                <!-- Formulário 2 -->
                <ContentView IsVisible="{Binding MostrarFormulario2}">
                    <VerticalStackLayout Spacing="20">
                        <!-- Título do segundo formulário -->
                        <Label Text="Cadastro Densidade IN-SITU - 2"
                               FontSize="24"
                               TextColor="Blue"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               Margin="0,0,0,20" />

                        <!-- Adicione outros campos aqui -->
                        <!-- Campo Antes -->
                        <HorizontalStackLayout Spacing="20" VerticalOptions="Center">
                            <!-- Campo Antes -->
                            <VerticalStackLayout Spacing="5">
                                <Label Text="Antes (g):"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />
                                <Entry Placeholder="Digite o valor"
                   Keyboard="Numeric"
                   BackgroundColor="#f0f4ff"
                   TextColor="Black"
                   FontAttributes="Bold"
                   HeightRequest="50"
                   WidthRequest="150"
                   Text="{Binding Antes}" />
                            </VerticalStackLayout>

                            <!-- Campo Depois -->
                            <VerticalStackLayout Spacing="5">
                                <Label Text="Depois (g):"
               FontAttributes="Bold"
               HorizontalOptions="Center" />
                                <Entry Placeholder="Digite o valor"
               Keyboard="Numeric"
               BackgroundColor="#f0f4ff"
               TextColor="Black"
               FontAttributes="Bold"
               HeightRequest="50"
               WidthRequest="150"
               Text="{Binding Depois}" />
                            </VerticalStackLayout>
                        </HorizontalStackLayout>


                        <!-- Campo Diferença -->
                        <HorizontalStackLayout Spacing="10">
                            <Label Text="Diferença (g):"
                                   FontAttributes="Bold"
                                   VerticalOptions="Center"
                                   WidthRequest="150" />
                            <Entry Placeholder="Digite o valor"
                                   Keyboard="Numeric"
                                   Text="{Binding Diferenca}"
                                   HorizontalOptions="FillAndExpand" />
                        </HorizontalStackLayout>

                        <!-- Campo P. Fúnil -->
                        <HorizontalStackLayout Spacing="10">
                            <Label Text="P. Fúnil (g):"
                                   FontAttributes="Bold"
                                   VerticalOptions="Center"
                                   WidthRequest="150" />
                            <Entry Placeholder="Digite o valor"
                                   Keyboard="Numeric"
                                   Text="{Binding PesoFunil}"
                                   HorizontalOptions="FillAndExpand" />
                        </HorizontalStackLayout>

                        <!-- Campo P. Furo -->
                        <HorizontalStackLayout Spacing="10">
                            <Label Text="P. Furo (g):"
                                   FontAttributes="Bold"
                                   VerticalOptions="Center"
                                   WidthRequest="150" />
                            <Entry Placeholder="Digite o valor"
                                   Keyboard="Numeric"
                                   Text="{Binding PesoFuro}"
                                   HorizontalOptions="FillAndExpand" />
                        </HorizontalStackLayout>

                        <!-- Campo D. AREIA -->
                        <HorizontalStackLayout Spacing="10">
                            <Label Text="D. AREIA (g/cm³):"
                                   FontAttributes="Bold"
                                   VerticalOptions="Center"
                                   WidthRequest="150" />
                            <Entry Placeholder="Digite a densidade"
                                   Keyboard="Numeric"
                                   Text="{Binding DensidadeAreia}"
                                   HorizontalOptions="FillAndExpand" />
                        </HorizontalStackLayout>

                        <!-- Campo Volume Furo -->
                        <HorizontalStackLayout Spacing="10">
                            <Label Text="Volume Furo (cm³):"
                                   FontAttributes="Bold"
                                   VerticalOptions="Center"
                                   WidthRequest="150" />
                            <Entry Placeholder="Digite o volume"
                                   Keyboard="Numeric"
                                   Text="{Binding VolumeFuro}"
                                   HorizontalOptions="FillAndExpand" />
                        </HorizontalStackLayout>

                        <!-- Campo Umidade -->
                        <HorizontalStackLayout Spacing="10">
                            <Label Text="Umidade (%):"
                                   FontAttributes="Bold"
                                   VerticalOptions="Center"
                                   WidthRequest="150" />
                            <Entry Placeholder="Digite a umidade"
                                   Keyboard="Numeric"
                                   Text="{Binding Umidade}"
                                   HorizontalOptions="FillAndExpand" />
                        </HorizontalStackLayout>

                        <!-- Campo Tara Recipiente -->
                        <HorizontalStackLayout Spacing="10">
                            <Label Text="T. Recipiente (g):"
                                   FontAttributes="Bold"
                                   VerticalOptions="Center"
                                   WidthRequest="150" />
                            <Entry Placeholder="Digite o valor"
                                   Keyboard="Numeric"
                                   Text="{Binding TaraRecipiente}"
                                   HorizontalOptions="FillAndExpand" />
                        </HorizontalStackLayout>

                        <!-- Campo P. Solo Úmido -->
                        <HorizontalStackLayout Spacing="10">
                            <Label Text="P. Solo Úmido (g):"
                                   FontAttributes="Bold"
                                   VerticalOptions="Center"
                                   WidthRequest="150" />
                            <Entry Placeholder="Digite o valor"
                                   Keyboard="Numeric"
                                   Text="{Binding PesoSoloUmido}"
                                   HorizontalOptions="FillAndExpand" />
                        </HorizontalStackLayout>

                        <!-- Botões -->
                        <HorizontalStackLayout Spacing="20" HorizontalOptions="Center">
                            <Button Text="Voltar"
                                    Command="{Binding VoltarCommand}"
                                    BackgroundColor="Gray"
                                    TextColor="White"
                                    FontAttributes="Bold"
                                    HeightRequest="50"
                                    CornerRadius="10" />

                            <Button Text="Avançar"
                                    Command="{Binding FinalizarCommand}"
                                    BackgroundColor="Blue"
                                    TextColor="White"
                                    FontAttributes="Bold"
                                    HeightRequest="50"
                                    CornerRadius="10" />
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                </ContentView>
            </VerticalStackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
